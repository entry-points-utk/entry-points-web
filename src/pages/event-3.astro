<style>
  :root {
    --blue-dark: #3E5B6F;
    --blue-bright: #2197A9;
    --yellow: #EBEA64;
    --blue-light: #B9E1E2;
    --charcoal: #4B4B4B;
    --white: #ffffff;
    --light-gray: #f8f9fa;
    --orange: #ff8200;
  }

  .event-header {
    text-align: center;
    padding: 2rem 0 3rem;
    border-bottom: 2px solid #e9ecef;
    margin-bottom: 3rem;
  }

  .event-header h1 {
    font-family: 'Montserrat', sans-serif;
    font-size: 2.8rem;
    color: var(--charcoal);
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .event-date {
    font-size: 1.2rem;
    color: var(--blue-dark);
  }

  section {
    margin-bottom: 3rem;
  }

  h2 {
    font-family: 'Montserrat', sans-serif;
    color: var(--charcoal);
    font-size: 1.8rem;
    margin-bottom: 1rem;
    border-bottom: 3px solid var(--yellow);
    padding-bottom: 0.5rem;
    font-weight: 700;
  }

  .overview p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--charcoal);
  }

  .topics ul,
  .audience ul {
    list-style: none;
    padding: 0;
  }

  .topics li,
  .audience li {
    padding: 1rem 1rem 1rem 2.5rem;
    margin-bottom: 0.75rem;
    background: var(--light-gray);
    border-left: 4px solid var(--orange);
    position: relative;
  }

  .topics li::before,
  .audience li::before {
    content: "→";
    position: absolute;
    left: 1rem;
    color: var(--blue-bright);
    font-weight: bold;
  }

  .registration {
    margin-top: 4rem;
  }

  .registration-box {
    background: linear-gradient(135deg, rgba(81, 124, 150, 0.15) 0%, rgba(33, 151, 169, 0.15) 100%);
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
    border-left: 4px solid var(--yellow);
  }

  .registration-box h2 {
    color: var(--charcoal);
    border: none;
    margin-bottom: 1rem;
  }

  .registration-box p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    color: var(--charcoal);
  }

  .btn-large {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--blue-dark);
    color: var(--white);
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: background 0.2s;
  }

  .btn-large:hover {
    background: var(--orange);
  }

  @media (max-width: 768px) {
    .event-header h1 {
      font-size: 2rem;
    }

    .registration-box {
      padding: 2rem 1.5rem;
    }
  }
  .event-flyer {
    margin: 3rem 0;
  }

  .flyer-container {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .flyer-container iframe {
    border: none;
    display: block;
  }

  .download-section {
    text-align: center;
  }

  .download-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #2197A9;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .download-btn:hover {
    background: #1a7a89;
  }
</style>